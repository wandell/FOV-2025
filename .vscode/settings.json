{
    "files.associations": {
        "*.bib": "bibtex"
    },
    "[bibtex]": {
        "editor.defaultFormatter": "xrimson.bibtex-tidy",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "[bib]": {
        "editor.defaultFormatter": "xrimson.bibtex-tidy"
    }
}